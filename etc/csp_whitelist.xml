<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp/etc/csp_whitelist.xsd">
  <policies>
    <policy id="script-src">
      <values>
        <!--CDN-->
        <value id="cloudflare" type="host">*.cloudflare.com</value>

        <!--Amex-->
        <value id="amex" type="host">*.americanexpress.com</value>

        <!--Google-->
        <value id="google-analytics" type="host">www.google-analytics.com</value>
        <value id="google-tag-analytics" type="host">*.googletagmanager.com</value>
        <value id="google" type="host">*.google.com</value>
        <value id="gstatic" type="host">*.gstatic.com</value>

        <!--Functions-->
        <value id="facebook_net" type="host">*.facebook.net</value>
        <value id="facebook_com" type="host">*.facebook.com</value>

        <!-- Accessibe -->
        <value id="accessibe_sub" type="host">*.acsbapp.com</value>
        <value id="accessibe" type="host">acsbapp.com</value>
        
        <!-- Youtube -->
        <value id="youtube" type="host">*.youtube.com</value>

        <!--Analytics-->
        <value id="nailallianceuk" type="host">*.nailalliance.co.uk</value>
      </values>
    </policy>
    <policy id="style-src">
      <values>
        <!--CDN-->
        <value id="cloudflare" type="host">*.cloudflare.com</value>

        <!--Design-->
        <value id="typekit" type="host">*.typekit.net</value>
        
        <!--Fonts-->
        <value id="gstatic" type="host">*.gstatic.com</value>
        <value id="fonts_net" type="host">*.fonts.net</value>
        <value id="fonts_googleapis_com" type="host">fonts.googleapis.com</value>
      </values>
    </policy>
    <policy id="img-src">
      <values>
        <!--CDN-->
        <value id="cloudflare" type="host">*.fbcdn.net</value>

        <!--Payments-->
        <value id="paypal" type="host">*.paypal.com</value>

        <!--Analytics-->
        <value id="nailallianceuk-img" type="host">*.nailalliance.co.uk</value>

        <!--Video-->
        <value id="vimeocdn" type="host">*.vimeocdn.com</value>
        <value id="youtube-img" type="host">https://s.ytimg.com</value>
        <value id="instagram-img" type="host">*.cdninstagram.com</value>

        <!--Functions-->
      </values>
    </policy>
    <policy id="connect-src">
      <values>
        <!--CDN-->
        <value id="facebook_com" type="host">*.facebook.com</value>

        <!--Payments-->
        <value id="paypal" type="host">*.paypal.com</value>
        <value id="instagram" type="host">*.instagram.com</value>

        <!--google-->
        <value id="google" type="host">*.google.com</value>
        <value id="google-analytics" type="host">www.google-analytics.com</value>

        <!-- Accessibe -->
        <value id="accessibe" type="host">*.acsbapp.com</value>

      </values>
    </policy>
    <policy id="font-src">
      <values>
        <!--CDN-->
        <value id="cloudflare" type="host">*.cloudflare.com</value>

        <!--Design-->
        <value id="typekit" type="host">*.typekit.net</value>

        <!--Functions-->
        <value id="trustedshops" type="host">*.trustedshops.com</value>
        
        <!--Fonts-->
        <value id="gstatic" type="host">*.gstatic.com</value>
        <value id="fonts_net" type="host">*.fonts.net</value>
      </values>
    </policy>
    <policy id="frame-src">
      <values>
        <value id="youtube" type="host">*.youtube.com</value>
        <value id="instagram" type="host">*.instagram.com</value>
        <value id="google" type="host">*.google.com</value>
      </values>
    </policy>
  </policies>
</csp_whitelist>
